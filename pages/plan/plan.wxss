/* index.wxss */

.badge {
  width:50px;
  border-radius: 5px;
  height: 20px;
  background: #ddd;
  line-height: 20px;
  padding: 0 5px;
  color: #fff;
  font-size: 12px;
  min-width: 25px;
  max-width: 25px;
}

.done {
  text-decoration: line-through;
  color: #999;
}

.to-do {
  height: 50px;
  line-height: 50px;
  font-size: 14px;
  padding: 0 5px;
  border-bottom: 1px solid #ddd;
  position: relative;
}


.to-do-content {
  overflow-x: hidden;
  text-overflow: ellipsis;
  word-break: keep-all;
  white-space: nowrap;
  text-indent: 0.5em;
  width:100%;
}

.fn-area {
  height: 50px;
  line-height: 50px;
  position: absolute;
  right: 0;
  top: 0;
  width: 40px;
  text-align: center;
  background: #eee;
  color: #fff;
  overflow-x: hidden;
  text-overflow: ellipsis;
  word-break: keep-all;
  white-space: nowrap;
  z-index: 10;
}

.fn-btn-edit {
  background: #1296db;
  position: relative;
  width: 100%;
  height: 100%;
}

.fn-btn-delete {
  background: #e84e26;
  position: relative;
  width: 100%;
  height: 100%;
}

.btn-add {
  position: absolute;
  bottom: 5px;
  right: 5px;
  width: 40px;
  height: 40px;
}

.pop-up {
  font-size: 14px;
  position: fixed;
  width: 60%;
  /* height: 300px; */
  background: #1296db;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  border-top: none;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
}

.pop-up-title {
  height: 40px;
  line-height: 40px;
  width: 100%;
  font-size: 18px;
  color: #fff;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
}

.fn-mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  /* background: #000; */
  opacity: 0.2;
  z-index: 9;
}

.section {
  background: #fff;
  height: 40px;
  line-height: 40px;
  width: 100%;
  border-top: 1px solid #eee;
  /* margin: 0.5px 0; */
}

.section input, .section picker {
  margin: 0 5px;
  width: 100%;
}
